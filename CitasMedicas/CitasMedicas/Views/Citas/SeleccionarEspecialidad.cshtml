@model CitasMedicas.Models.EscogerEspecialidadViewModel

@{
    ViewData["Title"] = "Escoger Especialidad";

}

<h1>Creación</h1>

<h4>Cita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReturnCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" name="PacienteNombre" value="@(ViewBag.NombrePaciente)" />
            <input type="hidden" name="PacienteId" value="@(ViewBag.IdPaciente)" />
             
            <div class="form-group">
                <label asp-for="EspecialidadId" class="control-label"></label>
                <select asp-for="EspecialidadId" class="form-control" asp-items="ViewBag.EspecialidadId"></select>
                <span asp-validation-for="EspecialidadId" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
